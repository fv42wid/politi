%h1= @issue.title

= render :partial => 'layouts/flash_display'

%p
  %b Description:
  = @issue.description
%p
  %b Citation:
  = link_to @issue.citation, url_helper(@issue.citation), :target => '_blank'

- if @issue.conflict_title
  %p
    %h3 Conflict
  %p
    %b Conflict:
    = @issue.conflict_title
  %p
    %b Description:
    = @issue.conflict_description
  %p
    %b Citation:
    = link_to @issue.conflict_citation, url_helper(@issue.conflict_citation), :target => '_blank'

= link_to 'Edit', edit_candidate_issue_path(@candidate, @issue)
\|
= link_to 'Conflict', conflict_candidate_issue_path(@candidate, @issue)
\|
= link_to 'Back', candidate_path(@candidate)
